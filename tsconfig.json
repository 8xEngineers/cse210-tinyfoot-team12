{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
    "module": "system",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true
  },
  "include": ["./src"]
}
