{
  "name": "littlefoot",
  "version": "1.0.0-alpha.5",
  "description": "Footnotes without the footprint.",
  "repository": "goblindegook/littlefoot",
  "scripts": {
    "build": "npm run build-scripts && npm run build-styles",
    "build-scripts": "cd src; babel *.js **/*.js -d ../lib",
    "build-styles": "node-sass --include-path styles/sass -o styles/css/ styles/sass/",
    "docs": "esdoc -c esdoc.json",
    "prepublish": "npm run build",
    "pretest": "eslint src/**/*.js",
    "test": "testling | faucet"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "testling": {
    "files": "test/**/*.js",
    "browsers": [
      "ie/9..latest",
      "chrome/22..latest",
      "firefox/16..latest",
      "safari/latest",
      "opera/11.0..latest",
      "iphone/6",
      "ipad/6",
      "android-browser/latest"
    ]
  },
  "author": {
    "name": "Lu√≠s Rodrigues",
    "email": "hello@goblindegook.net",
    "url": "https://goblindegook.com/"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "style": "styles/css/littlefoot.css",
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-plugin-object-assign": "^1.2.1",
    "babel-plugin-transform-object-assign": "^6.5.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-tape-runner": "^2.0.1",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "esdoc": "^0.4.3",
    "eslint": "^1.10.3",
    "faucet": "0.0.1",
    "node-sass": "^3.4.2",
    "sinon": "^1.17.3",
    "tape": "^4.4.0",
    "testling": "^1.7.1"
  },
  "dependencies": {
    "dom-closest": "^0.2.0",
    "dom-matches": "^2.0.0",
    "dom-siblings": "^0.1.0",
    "lodash": "^4.5.1"
  }
}
