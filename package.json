{
  "name": "littlefoot",
  "version": "1.0.7",
  "description": "Footnotes without the footprint.",
  "repository": "goblindegook/littlefoot",
  "scripts": {
    "build:scripts": "browserify -s littlefoot -o dist/littlefoot.js src/index.js",
    "build:styles": "node-sass --output-style compressed --include-path styles -o dist/ styles/",
    "build": "mkdir -p dist && concurrently 'yarn build:scripts' 'yarn build:styles' && yarn optimize",
    "clean": "rm -rf coverage dist",
    "lint": "standard",
    "optimize": "uglifyjs dist/littlefoot.js --compress unused=false --mangle > dist/littlefoot.min.js",
    "prepublish": "yarn rebuild",
    "pretest": "concurrently 'yarn lint' 'yarn build:styles'",
    "rebuild": "yarn clean && yarn build",
    "test:chrome": "NODE_ENV=test karma start --single-run --browsers ChromeHeadless",
    "test:chrome-no-sandbox": "NODE_ENV=test karma start --single-run --browsers ChromeHeadlessNoSandbox",
    "test:firefox": "NODE_ENV=test karma start --single-run --browsers Firefox",
    "test:watch": "NODE_ENV=test karma start --browsers Chrome",
    "test": "NODE_ENV=test yarn test:chrome-no-sandbox",
    "format": "prettier-standard '{src,test}/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "watch": "watchify -s littlefoot -o dist/littlefoot.js src/index.js"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "author": {
    "name": "Lu√≠s Rodrigues",
    "email": "hello@goblindegook.net",
    "url": "https://goblindegook.com/"
  },
  "license": "MIT",
  "main": "dist/littlefoot.js",
  "jsnext:main": "src/index.js",
  "typings": "src/index.d.ts",
  "style": "dist/littlefoot.css",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "babel-plugin-istanbul": "^5.0.1",
    "babel-plugin-lodash": "^3.3.4",
    "babel-tape-runner": "^3.0.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.2",
    "concurrently": "^4.0.1",
    "istanbul": "^0.4.3",
    "karma": "^3.0.0",
    "karma-browserify": "^5.0.5",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-firefox-launcher": "^1.0.1",
    "karma-safari-launcher": "^1.0.0",
    "karma-sinon": "^1.0.5",
    "karma-tap": "^4.1.4",
    "node-sass": "^4.9.3",
    "prettier": "^1.14.2",
    "prettier-standard": "^8.0.1",
    "simulant": "^0.2.2",
    "sinon": "^6.3.3",
    "standard": "^12.0.1",
    "stringify": "^5.1.0",
    "tape": "^4.8.0",
    "uglify-js": "^3.4.9",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "dom-classlist": "^1.0.1",
    "dom-closest": "^0.2.0",
    "dom-delegate": "^2.0.3",
    "dom-matches": "^2.0.0",
    "dom-siblings": "^0.1.0",
    "lodash": "^4.17.11"
  }
}
