{
  "name": "littlefoot",
  "version": "2.0.0-alpha.2",
  "description": "Footnotes without the footprint.",
  "repository": "goblindegook/littlefoot",
  "scripts": {
    "clean": "rm -rf coverage dist",
    "build:scripts": "browserify --extension=ts -p tinyify -s littlefoot -o dist/littlefoot.js src/index.ts",
    "build:styles": "node-sass --output-style compressed --include-path styles -o dist/ styles/",
    "build:types": "tsc --emitDeclarationOnly",
    "optimize": "uglifyjs dist/littlefoot.js --compress unused=false --mangle > dist/littlefoot.min.js",
    "build": "yarn clean && mkdir -p dist && concurrently 'yarn build:types' 'yarn build:scripts' 'yarn build:styles' && yarn optimize",
    "watch": "watchify --extension=ts -s littlefoot -o dist/littlefoot.js src/index.ts",
    "format": "prettier --write '{cypress,src,test}/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "lint": "tslint --project tsconfig.tslint.json '{src,test}/**/*.ts'",
    "test": "yarn lint && concurrently 'yarn test:types' 'yarn test:jest' 'yarn test:cypress'",
    "test:cypress": "yarn build && cypress run",
    "test:cypress:open": "yarn build && cypress open",
    "test:jest": "jest",
    "test:types": "tsc --noEmit",
    "prepublish": "yarn build"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "extensions": [
            ".js",
            ".ts"
          ]
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "{src,test}/**/*.ts": [
        "prettier --write",
        "tslint --project tsconfig.tslint.json",
        "git add"
      ],
      "{src,test/**/*.{js,json,css,md}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testURL": "http://localhost"
  },
  "author": {
    "name": "Lu√≠s Rodrigues",
    "email": "hello@goblindegook.net",
    "url": "https://goblindegook.com/"
  },
  "license": "MIT",
  "main": "dist/littlefoot.min.js",
  "jsnext:main": "dist/littlefoot.js",
  "typings": "dist/index.d.ts",
  "style": "dist/littlefoot.css",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/runtime": "^7.0.0",
    "@cypress/browserify-preprocessor": "^2.0.0",
    "@types/jest": "^24.0.5",
    "@types/lodash.template": "^4.4.5",
    "@types/lodash.throttle": "^4.1.5",
    "@types/node": "^11.9.3",
    "babelify": "^10.0.0",
    "browserify": "^16.2.2",
    "concurrently": "^4.0.1",
    "cypress": "^3.1.5",
    "cypress-testing-library": "^3.0.1",
    "dom-testing-library": "^4.0.0",
    "husky": "^2.1.0",
    "jest": "^24.1.0",
    "jest-dom": "^3.1.2",
    "lint-staged": "^8.1.4",
    "node-sass": "^4.9.3",
    "prettier": "^1.16.4",
    "tinyify": "^2.5.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.0.3",
    "uglify-js": "^3.4.9",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "@pacote/get-style": "^1.0.0",
    "@pacote/pixels": "^1.0.0-alpha.0",
    "delegated-events": "^1.0.10",
    "lodash.template": "^4.4.0",
    "lodash.throttle": "^4.1.1"
  }
}
