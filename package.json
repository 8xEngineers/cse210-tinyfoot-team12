{
  "name": "littlefoot",
  "version": "1.0.0-alpha.14",
  "description": "Footnotes without the footprint.",
  "repository": "goblindegook/littlefoot",
  "scripts": {
    "clean": "rm -rf coverage dist",
    "rebuild": "npm run clean && npm run build",
    "build": "mkdir -p dist && npm run build-scripts && npm run build-styles && npm run optimize",
    "build-scripts": "browserify -s littlefoot -o dist/littlefoot.js src/index.js",
    "build-styles": "node-sass --output-style compressed --include-path styles -o dist/ styles/",
    "optimize": "uglifyjs dist/littlefoot.js --compress unused=false --mangle > dist/littlefoot.min.js",
    "docs": "esdoc -c esdoc.json",
    "lint": "eslint {src,test}/**/*.js",
    "prepublish": "npm run rebuild",
    "pretest": "npm run lint && npm run build-styles",
    "test": "karma start --single-run",
    "test-local": "karma start --single-run --browsers ChromeCanary",
    "watch": "karma start --browsers ChromeCanary"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "author": {
    "name": "Lu√≠s Rodrigues",
    "email": "hello@goblindegook.net",
    "url": "https://goblindegook.com/"
  },
  "license": "MIT",
  "main": "dist/littlefoot.js",
  "jsnext:main": "src/index.js",
  "style": "dist/littlefoot.css",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-helpers": "^6.8.0",
    "babel-istanbul": "^0.8.0",
    "babel-plugin-object-assign": "^1.2.1",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-plugin-transform-strict-mode": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-tape-runner": "^2.0.1",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "browserify-istanbul": "^2.0.0",
    "esdoc": "^0.4.7",
    "eslint": "^2.10.2",
    "istanbul": "^0.4.3",
    "karma": "^0.13.22",
    "karma-browserify": "^5.0.5",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.0.0",
    "karma-coveralls": "^1.1.2",
    "karma-firefox-launcher": "^1.0.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^1.0.0",
    "karma-sinon": "^1.0.5",
    "karma-tap": "^1.0.4",
    "node-sass": "^3.7.0",
    "simulant": "^0.2.2",
    "sinon": "^1.17.4",
    "stringify": "^5.1.0",
    "tape": "^4.5.1",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "babel-runtime": "^6.9.0",
    "delegate": "^3.0.1",
    "dom-classlist": "^1.0.1",
    "dom-closest": "^0.2.0",
    "dom-matches": "^2.0.0",
    "dom-siblings": "^0.1.0",
    "lodash": "^4.12.0"
  }
}
