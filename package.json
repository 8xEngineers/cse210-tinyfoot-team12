{
  "name": "littlefoot",
  "version": "1.0.2",
  "description": "Footnotes without the footprint.",
  "repository": "goblindegook/littlefoot",
  "scripts": {
    "build:scripts": "browserify -s littlefoot -o dist/littlefoot.js src/index.js",
    "build:styles": "node-sass --output-style compressed --include-path styles -o dist/ styles/",
    "build": "mkdir -p dist && concurrently 'npm run build:scripts' 'npm run build:styles' && npm run optimize",
    "clean": "rm -rf coverage dist docs",
    "docs": "esdoc -c esdoc.json",
    "lint": "standard",
    "optimize": "uglifyjs dist/littlefoot.js --compress unused=false --mangle > dist/littlefoot.min.js",
    "prepublish": "npm run rebuild",
    "pretest": "concurrently 'npm run lint' 'npm run build:styles'",
    "rebuild": "npm run clean && npm run build",
    "test:chrome": "karma start --single-run --browsers ChromeHeadless",
    "test:chrome-no-sandbox": "karma start --single-run --browsers ChromeHeadlessNoSandbox",
    "test:firefox": "karma start --single-run --browsers Firefox",
    "test:saucelabs": "karma start --single-run",
    "test:watch": "karma start --browsers ChromeHeadless",
    "test": "npm run test:chrome-no-sandbox"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "author": {
    "name": "Lu√≠s Rodrigues",
    "email": "hello@goblindegook.net",
    "url": "https://goblindegook.com/"
  },
  "license": "MIT",
  "main": "dist/littlefoot.js",
  "jsnext:main": "src/index.js",
  "style": "dist/littlefoot.css",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-tape-runner": "^2.0.1",
    "babelify": "^8.0.0",
    "browserify": "^16.2.2",
    "browserify-istanbul": "^3.0.1",
    "concurrently": "^3.5.0",
    "esdoc": "^1.0.1",
    "istanbul": "^0.4.3",
    "karma": "^2.0.4",
    "karma-browserify": "^5.0.5",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-coverage-istanbul-reporter": "^2.0.1",
    "karma-firefox-launcher": "^1.0.1",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^1.2.0",
    "karma-sinon": "^1.0.5",
    "karma-tap": "^4.1.4",
    "node-sass": "^4.9.0",
    "simulant": "^0.2.2",
    "sinon": "^6.1.0",
    "standard": "^11.0.1",
    "stringify": "^5.1.0",
    "tape": "^4.8.0",
    "uglify-js": "^3.0.28",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "dom-classlist": "^1.0.1",
    "dom-closest": "^0.2.0",
    "dom-delegate": "^2.0.3",
    "dom-matches": "^2.0.0",
    "dom-siblings": "^0.1.0",
    "lodash.escape": "^4.0.1",
    "lodash.template": "^4.4.0",
    "lodash.throttle": "^4.1.1"
  }
}
