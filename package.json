{
  "name": "littlefoot",
  "version": "1.0.9",
  "description": "Footnotes without the footprint.",
  "repository": "goblindegook/littlefoot",
  "scripts": {
    "build:scripts": "browserify --extension=ts -p tinyify -s littlefoot -o dist/littlefoot.js src/index.ts",
    "build:styles": "node-sass --output-style compressed --include-path styles -o dist/ styles/",
    "build:types": "tsc --emitDeclarationOnly",
    "build": "mkdir -p dist && concurrently 'yarn build:types' 'yarn build:scripts' 'yarn build:styles' && yarn optimize",
    "clean": "rm -rf coverage dist",
    "lint": "tslint --project . '{src,test}/**/*.ts'",
    "optimize": "uglifyjs dist/littlefoot.js --compress unused=false --mangle > dist/littlefoot.min.js",
    "prepublish": "yarn rebuild",
    "pretest": "concurrently 'yarn lint' 'yarn build:styles'",
    "rebuild": "yarn clean && yarn build",
    "test:chrome": "NODE_ENV=test karma start --browsers ChromeHeadlessNoSandbox",
    "test:firefox": "NODE_ENV=test karma start --browsers FirefoxHeadless",
    "test:watch": "yarn test:firefox --no-single-run --browser-no-activity-timeout 0",
    "test": "yarn test:chrome",
    "format": "prettier --write '{src,test}/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "yarn typecheck --watch",
    "watch": "watchify --extension=ts -s littlefoot -o dist/littlefoot.js src/index.ts"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "extensions": [
            ".js",
            ".ts"
          ]
        }
      ]
    ]
  },
  "author": {
    "name": "Lu√≠s Rodrigues",
    "email": "hello@goblindegook.net",
    "url": "https://goblindegook.com/"
  },
  "license": "MIT",
  "main": "dist/littlefoot.min.js",
  "jsnext:main": "dist/littlefoot.js",
  "typings": "dist/index.d.ts",
  "style": "dist/littlefoot.css",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/runtime": "^7.0.0",
    "@types/lodash.escape": "^4.0.5",
    "@types/lodash.template": "^4.4.5",
    "@types/lodash.throttle": "^4.1.5",
    "@types/node": "^11.9.3",
    "@types/tape": "^4.2.33",
    "babel-plugin-istanbul": "^5.0.1",
    "babel-tape-runner": "^3.0.0",
    "babelify": "^10.0.0",
    "brfs": "^2.0.1",
    "browserify": "^16.2.2",
    "concurrently": "^4.0.1",
    "istanbul": "^0.4.3",
    "karma": "^4.0.0",
    "karma-browserify": "^6.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-firefox-launcher": "^1.0.1",
    "karma-safari-launcher": "^1.0.0",
    "karma-sinon": "^1.0.5",
    "karma-tap": "^4.1.4",
    "karma-typescript": "^4.0.0",
    "node-sass": "^4.9.3",
    "prettier": "^1.16.4",
    "simulant": "^0.2.2",
    "sinon": "^7.2.0",
    "tape": "^4.8.0",
    "tinyify": "^2.5.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.0.3",
    "uglify-js": "^3.4.9",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "delegated-events": "^1.0.10",
    "lodash.escape": "^4.0.1",
    "lodash.template": "^4.4.0",
    "lodash.throttle": "^4.1.1"
  }
}
