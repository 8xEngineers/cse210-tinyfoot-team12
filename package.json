{
  "name": "littlefoot",
  "version": "2.0.3",
  "description": "Footnotes without the footprint.",
  "repository": "goblindegook/littlefoot",
  "scripts": {
    "clean": "rm -rf coverage dist",
    "build:scripts": "browserify --extension=ts -p tinyify -s littlefoot -o dist/littlefoot.js src/index.ts",
    "build:styles": "node-sass --output-style compressed --include-path styles -o dist/ styles/",
    "build:types": "tsc --emitDeclarationOnly",
    "optimize": "uglifyjs dist/littlefoot.js --compress unused=false --mangle > dist/littlefoot.min.js",
    "build": "yarn clean && mkdir -p dist && concurrently 'yarn build:types' 'yarn build:scripts' 'yarn build:styles' && yarn optimize",
    "watch:scripts": "watchify --extension=ts -s littlefoot -o dist/littlefoot.js src/index.ts",
    "watch:styles": "node-sass --watch --output-style compressed --include-path styles -o dist/ styles/",
    "format": "prettier --write '{cypress,src,test}/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "lint": "eslint '{cypress,src,test}/**/*.ts'",
    "pretest": "yarn lint",
    "test": "concurrently 'yarn test:types' 'yarn test:jest' 'yarn test:cypress'",
    "test:cypress": "yarn build && cypress run",
    "test:cypress:open": "yarn build && cypress open",
    "test:jest": "jest",
    "test:types": "tsc --noEmit",
    "release": "standard-version",
    "prepublish": "yarn build"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "extensions": [
            ".js",
            ".ts"
          ]
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "{src,test/**/*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom-fifteen",
    "testURL": "http://localhost"
  },
  "author": {
    "name": "Lu√≠s Rodrigues",
    "email": "hello@goblindegook.net",
    "url": "https://goblindegook.com/"
  },
  "license": "MIT",
  "main": "dist/littlefoot.min.js",
  "jsnext:main": "dist/littlefoot.js",
  "typings": "dist/index.d.ts",
  "style": "dist/littlefoot.css",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/runtime": "^7.0.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@cypress/browserify-preprocessor": "^2.0.0",
    "@testing-library/cypress": "^4.0.0",
    "@testing-library/dom": "^6.0.0",
    "@testing-library/jest-dom": "^4.0.0",
    "@types/delegated-events": "^1.0.0",
    "@types/jest": "^24.0.5",
    "@types/lodash.template": "^4.4.5",
    "@types/lodash.throttle": "^4.1.5",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.2",
    "concurrently": "^4.0.1",
    "cypress": "^3.1.5",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.0",
    "jest": "^24.1.0",
    "jest-environment-jsdom-fifteen": "^1.0.0",
    "lint-staged": "^9.0.0",
    "node-sass": "^4.9.3",
    "prettier": "^1.16.4",
    "standard-version": "^7.0.0",
    "tinyify": "^2.5.0",
    "typescript": "^3.0.3",
    "uglify-js": "^3.4.9",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "@pacote/get-style": "^1.0.0",
    "@pacote/pixels": "^1.0.0",
    "delegated-events": "^1.0.10",
    "lodash.template": "^4.4.0",
    "lodash.throttle": "^4.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
